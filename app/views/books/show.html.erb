<div class= "container px-5 px-sm-0 mt-3">
 <div class= "row">
  <div class= "col-md-3">
   <h2>User info</h2>
   <%= image_tag @book.user.get_profile_image(100,100) %>
   <table class= "table">
    <tbody>
     <tr>
      <th>name</th>
      <th><%= @book.user.name %></th>
     </tr>
     <tr>
      <th>introduction</th>
      <th><%= @book.user.introduction %></th>
     </tr>
    </tbody>
   </table>
   <div class= "row">
    <div class= "col">
     <%= link_to edit_user_path(@book.user), class: "btn btn-light" do %>
      <i class="fa-solid fa-user-gear"></i>
     <% end %>
    </div>
   </div>

   <h2 class= "mt-3">New Book</h2>
   <%= form_with model: @new_book do |f| %>
    <div class= "form-group">
     <label for= "book-title">Title</label>
     <%= f.text_field :title %>
    </div>
    <div class= "form-group">
     <label for= "book-opnion">Opinion</label>
      <%= f.text_area :body %>
    </div>
    <div class= "form-group">
     <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
    </div>
   <% end %>
  </div>

  <div class= "col-md-8 offset-md-1">
   <h2>Book details</h2>
   <table class= "table table-hover table-inverse">
    <tbody>
     <tr>
      <td>
       <%=link_to user_path(@book.user.id) do %>
        <%= image_tag @book.user.get_profile_image(100, 100) %>
        <%= @book.user.name %>
       <% end %>
      </td>
      <td>
       <%= link_to book_path(@book.id) do %>
        <%= @book.title %>
       <% end %>
      </td>
      <% if @book.user.id == current_user.id %>
      　<td><%= button_to "Edit", edit_book_path(@book.id), method: :get %></td>
      　<td><%= button_to "Destroy", book_path(@book.id), method: :delete %></td>
      <% end %>
     </tr>
    </tbody>
   </table>
  </div>
 </div>
</div>