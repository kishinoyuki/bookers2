<h1>User info</h1>
<% if @book.user %>
  <%= image_tag @book.user.get_profile_image(100,100) %>
  <p>name <%= @book.user.name %></p>
  <p>introduction <%= @book.user.introduction %></p>
  <%= link_to edit_user_path(@book.user) do %>
   <i class="fa-solid fa-user-gear"></i>
  <% end %>
<% else %>
  <p>No user info available</p>
<% end %>


<h1>New Book</h1>
<%= form_with model: @new_book do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Opinion</h4>
 <%= f.text_area :body %>

 <%= f.submit 'Create Book' %>
<% end %>

<h1>Book detail</h1>
<table>
 <tr>
  <thead>
   <th class= "title">Title</th>
   <th class= "body">Opinion</th>
  </thead>
 </tr>
  <tr>
   <tbody>
    <td>
    <%= link_to user_path(@book.user.id) do %>
     <%= image_tag @book.user.get_profile_image(100, 100) %>
     <%= @book.user.name %>
    <% end %>
    </td>
    <td>
     <%= link_to "#{@book.title}", book_path(@book.id) %>
    </td>
    <td>
     <%= @book.body %>
    </td>
    <td>
     <%= link_to "Edit", edit_book_path(@book.id) %> 
    </td>
    <td>
     <%= link_to "Destroy", book_path(@book.id), method: :delete %>
    </td>
   </tbody>
  </tr>
</table>