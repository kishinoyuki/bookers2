<div class= "container">
 <div class= "row">
  <div class= "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto mt-2">
   <h1>Editing Book</h1>
   <%= form_with model: @book do |f| %>
    <div class= "form-group mb-2">
     <label>Name</label>
     <%= f.text_field :title, autofocus: true, id: "inputname", placeholder: "Title", class: "form-control" %>
    </div>
    <div class= "form-group mb-2">
     <label>Opinion</label>
     <%= f.text_area :body, placeholder: "Body", class: "form-control" %>
    </div>
    <div class= "form-group mb-2">
     <%= f.submit "Update Book", class: "btn btn-secondary" %>
    </div>
   <% end %>
   <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
  </div>
 </div>
</div>



