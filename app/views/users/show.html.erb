<%= render 'books/list', user: @user %>
  <div class= "col-md-8 offset-md-1">
   <h2>Books</h2>
    <table class= "table table-hover table-inverse">
     <thead>
      <tr>
       <th class= "image"></th>
       <th class= "title">Title</th>
       <th class= "body">Opinion</th>
      </tr>
     </thead>
     <% @books.each do |book| %>
     <tbody>
      <tr>
       <td><%= image_tag @user.get_profile_image(100, 100) %></td>
       <td>
        <%= link_to book_path(book.id) do %>
         <%= book.title %>
        <% end %>   
       </td>
       <td><%= book.body %></td>
      </tr>
     </tbody>
     <% end %>
    </table>
   </div>
  </div>
 </div>