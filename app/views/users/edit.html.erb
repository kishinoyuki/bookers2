<div class= "container">
 <div class= "row">>
  <div class= "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto mt-2">
   <h2>User info</h2>
   <%= form_with model: @user do |f| %>
    <div class= "form-group mb-2">
     <label for= "user_name">Name</label>
     <%= f.text_field :name, autofocus: true, id: "inputname", placeholder: "Name" %>
    </div>
    <div class= "form-group mb-2">
     <label for= "inputImage">Image</label>
    <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
    </div>
    <div class= "form-group mb-2">
     <label for= "inputIntroduction">Introduction</label>
     <%= f.text_area :introduction, placeholder: "Introduction" %>
    </div>
    <div class= "form-group mb-2">
    <%= f.submit "Update User" %>
    </div>
   <% end %>
  </div>
 </div>
</div>
  