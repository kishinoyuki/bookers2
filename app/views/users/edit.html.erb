<div class= "container">
 <div class= "row">
  <div class= "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto mt-2">
   <h2>User info</h2>
   <%= form_with model: @user do |f| %>
    <div class= "form-group mb-3">
     <label>Name</label>
     <%= f.text_field :name, autofocus: true, id: "inputname", placeholder: "Name", class: "form-control" %>
    </div>
    <div class= "form-group mb-3">
     <label>Image</label>
    <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*", class: "form-control-file" %>
    </div>
    <div class= "form-group mb-3">
     <label>Introduction</label>
     <%= f.text_area :introduction, placeholder: "Introduction", class: "form-control" %>
    </div>
    <div class= "form-group mb-3">
    <%= f.submit "Update User", class: "btn btn-secondary" %>
    </div>
   <% end %>
  </div>
 </div>
</div>
  