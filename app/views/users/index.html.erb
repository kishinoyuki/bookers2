<div class= "container px-5 px-sm-0 mt-3">
 <div class= "row">
  <div class= "col-md-3">
   <h2>User info</h2>
   <%= image_tag current_user.get_profile_image(100,100) %>
   <table class= "table">
    <tbody>
     <tr>
      <th>name</th>
      <th><%= current_user.name %></th>
     </tr>
     <tr>
      <th>introduction</th>
      <th><%= current_user.introduction %></th>
     </tr>
    </tbody>
   </table>
   <div class= "row">
    <div class= "col">
     <%= link_to edit_user_path(current_user), class: "btn btn-light" do %>
      <i class="fa-solid fa-user-gear"></i>
     <% end %>
    </div>
   </div>

   <h2 class= "mt-3">New Book</h2>
   <%= form_with model: @new_book do |f| %>
    <div class= "form-group">
     <label for= "book-title">Title</label>
     <%= f.text_field :title %>
    </div>
    <div class= "form-group">
     <label for= "book-opnion">Opinion</label>
      <%= f.text_area :body %>
    </div>
    <div class= "form-group">
     <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
    </div>
   <% end %>
  </div>

  <div class= "col-md-8 offset-md-1">
   <h2>Users</h2>
   <table class= "table table-hover table-inverse">
    <thead>
     <tr>
      <th class= "image">image</th>
      <th class= "name">name</th>
      <th class= "show"></th>
     </tr>
    </thead>
    <% @users.each do |user| %>
    <tbody>
     <tr>
      <td>
        <%= image_tag user.get_profile_image(100, 100) %>
      </td>
      <td>
        <%= user.name %>
      </td>
      <td><%= link_to "show", user_path(user.id) %></td>
     </tr>
    </tbody>
    <% end %>
   </table>
  </div>
 </div>
</div>