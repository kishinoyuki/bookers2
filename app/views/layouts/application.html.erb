<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
     <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/7b0c0b1a1d.js" crossorigin="anonymous"></script> 
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class= "d-flex flex-column vh-100">
   <header>
    <nav class="navbar navbar-expend-lg navbar-dark bg-dark">
  <div class="container">
    <a class="navbar-brand" href="/"><%= link_to "Bookers", root_path %></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
      aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Home", user_path(current_user), class: 'nav-link text-light' %>
            <i class="fa-solid fa-house"></i>
        </li>
        <li class="nav-item">
          <%= link_to "Users", users_path, class: 'nav-link text-light' %>
            <i class="fa-solid fa-users"></i>
        </li>
        <li class="nav-item">
          <%= link_to "Books", books_path, class: 'nav-link text-light' %>
            <i class="fa-solid fa-book-open"></i>
        </li>
        <li class="nav-item">  
          <%= button_to "Log out", destroy_user_session_path, method: :delete, class: 'nav-button text-light' %>
          <i class="fa-solid fa-right-from-bracket"></i>
        </li>
        <li class="nav-item">
          <%= link_to root_path, class: 'nav-link text-light' %>
            <i class="fa-solid fa-house"></i>
        </li>
        <li class="nav-item">  
          <%= link_to "About", home_about_path, class: 'nav-link text-light' %>
            <i class="fa-solid fa-link"></i>
        </li>
        <li class="nav-item">  
          <%= link_to "Sign up", new_user_registration_path, class: 'nav-link text-light' %>
            <i class="fa-solid fa-user-plus"></i>
        </li>
        <li class="nav-item">  
          <%= link_to "Sign in", new_user_session_path, class: 'nav-link text-light' %>
            <i class="fa-solid fa-right-to-bracket"></i>
        </li>
        <% end %>
       </ul>
      </div>
     </div>
    </nav>
   </header>
   <main>
     <%= yield %>
   </main>
   
   <footer>
       
       
   </footer>
    
  </body>
</html>
